<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/list.css">
  <title>Lista Wrestlers</title>
</head>

<body>
  <div class="content">
    <h1>Wrestlers</h1>
    <div class="search">
      <div class="add-button">
        <a href="/api/createPagWrestler">Add</a>
      </div>
      <form autocomplete="off" action="/api/show?" method="GET">
        <div class="autocomplete" style="width:300px;">
          <input id="search-field" type="text" name="name" placeholder="Search">
        </div>
        <button id="search-button" type="submit">Search</button>
      </form>
      <div class="genre"><a href="/api/listAll">All</a></div>
      <div class="genre"><a href="/api/listGenre/M">Mens</a></div>
      <div class="genre"><a href="/api/listGenre/F">Womens</a></div>
    </div>
    <div id="wrestlers">
      <% pis.forEach(function(data) { %>
        <div class="container wrestler">
          <div class="grid-content">
            <% if(data.champion){%>
              <div class="champion"><img src="/images/<%= data.name %>.png" /></div>
              <% } else{%>
                <div class="no-champion"><img src="/images/<%= data.name %>.png" /></div>
                <%}%>
                  <figcaption>
                    <div class="grid-caption">
                      <h4 class="grid-caption-text"><a href="/api/show?name=<%= data.name %>">
                          <%= data.name %>
                        </a></h4>
                    </div>
                  </figcaption>
          </div>
          <div class="links-edit-delete"><a href="/api/edit/<%= data._id %>">Edit</a></div>
          <div class="links-edit-delete"><a onclick="confirmation('Delete record?!','/api/delete/<%= data._id %>')"
              href=#>Delete</a></div>
        </div>
        <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script>
    function confirmation(msg, url) {
      if (confirm(msg)) {
        window.location.href = url;
      } else { false; }
    }
  </script>
  <script type="text/javascript" src="/scripts/autocomplete.js"></script>
</body>

</html>