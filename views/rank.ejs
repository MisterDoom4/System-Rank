<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/css/ranks.css">
  <title>Rank</title>
</head>

<body>
  <div class="content">
    <h1>Ranks</h1>
    <div id="divisions">
    </div>
    Total:<%=pis.length %>
      <div id="contenders">
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th></th>
                <th>Name</th>
                <th>Points</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
              <% pis.forEach(function(data) { %>
                <tr>
                  <td>
                    <div class="no-champion"><img src="/images/<%= data.name %>.png" /></div>
                  </td>
                  <td>
                    <a href="/api/show?name=<%= data.name %>">
                      <%= data.name %>
                    </a>
                  </td>
                  <td>
                    <%= data.points %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- TODO: colocar do lado da tabela -->
      <button><a href="/match">Match</a></button>
  </div>
  <script type="text/javascript" src="/scripts/champion.js"></script>
  <script>champion();</script>
</body>

</html>